<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hd_team_form_id" model="ir.ui.view">
            <field name="name">Help Desk Team</field>
            <field name="model">hd.team</field>
            <field name="arch" type="xml">
                <form string="Help Desk Team">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="teams_id_menu_action" model="ir.actions.act_window">
            <field name="name">Help Desk Team</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hd.team</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>

